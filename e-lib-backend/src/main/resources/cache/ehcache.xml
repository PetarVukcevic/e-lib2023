<config xmlns='http://www.w3.org/2001/XMLSchema-instance'
        xlmns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ecache-core-3.7.xsd">

    <persistence directory="spring-boot-ehcache/cache" />

    <cache-template name="default">
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>

        <listeners>
            <class>com.petarvukcevic.elib.configurations.CacheLoggerEventConfiguration</class>
            <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
            <event-ordering-mode>UNORDERED</event-ordering-mode>
            <events-to-fire-on>CREATED</events-to-fire-on>
            <events-to-fire-on>EXPIRED</events-to-fire-on>
            <events-to-fire-on>EVICTED</events-to-fire-on>
        </listeners>

        <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">20</disk>
        </resources>
    </cache-template>

    <!-- CONFIGURATION FOR CACHING DATA... -->
    <cache alias="book" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>com.petarvukcevic.elib.entities.Book</value-type>
    </cache>

    <cache alias="books" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.List</value-type>
    </cache>

    <cache alias="book-page" uses-template="default">
        <key-type>java.lang.String</>
        <value-type>org.springframework.data.domain.Page</value-type>
    </cache>

</config>